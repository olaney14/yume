{
	"ai": {
		"type": "animate_on_interact",
		"frames": 2,
		"use": true,
		"side": "bottom"
	},
	"animation": {
		"type": "sequence",
		"start": "$start_frame",
		"length": 3,
		"speed": 8,
		"manual": true
	},
	"actions": [{
		"trigger": {
			"type": "use",
			"side": "bottom"
		},
		"action": {
			"type": "delayed",
			"action": {
				"type": "warp",
				"map": "$warp_map",
				"pos": {
					"x": "$warp_x",
					"y": "$warp_y"
				},
				"transition": {
					"type": "zoom",
					"scale": 5,
					"speed": 2
				}
			},
			"delay": 32
		}
	},
	{
		"trigger": {
			"type": "use",
			"side": "bottom"
		},
		"action": [{
			"type": "freeze"
		},
		{
			"type": "play",
			"sound": "small_fridge_open_001",
			"volume": 2.0
		},
		{
			"type": "set_flag",
			"flag": "nexus_door_open",
			"val": 1,
			"global": true
		}]
	},
	{
		"trigger": {
			"type": "use",
			"side": "bottom"
		},
		"action": {
			"type": "delayed",
			"action": {
				"type": "play",
				"sound": "space",
				"volume": 2.0
			},
			"delay": 16
		}
	},
	{
		"trigger": "onload",
		"action": {
			"type": "conditional",
			"condition": {
                "type": "bool",
                "val": {
                    "type": "flag",
                    "global": true,
                    "flag": "nexus_door_open"
                }
			},
			"action": [{
				"type": "set_animation_frame",
				"target": "self",
				"val": {
					"type": "add",
					"lhs": "$start_frame",
					"rhs": 2
				}
			},
			{
				"type": "set_flag",
				"flag": "nexus_door_open",
				"val": 0,
				"global": true
			},
			{
				"type": "delayed",
				"action": [{
					"type": "set_animation_frame",
					"target": "self",
					"val": "$start_frame"
				},
				{
					"type": "play",
					"sound": "door_big_close_001",
					"volume": 0.5
				}],
				"delay": 16
			}]
		}
	}],
	"height": "0",
	"solid": true,
	"walk_behind": false
}